<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.detail.DetailFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_detail_bottom_btn">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_detail_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctl_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/indigo"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_detail_movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/test_gambar"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_detail_header"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <TextView
                        android:id="@+id/tv_detail_movie_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text=""
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_detail_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/iv_detail_movie_poster"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/test_gambar_2" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_movie_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="movie_title"
                            android:textColor="@color/indigo"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_detail_movie_genre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="1"
                            android:text="movie_genre" />

                        <TextView
                            android:id="@+id/tv_detail_movie_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="1"
                            android:text="movie_duration" />

                        <TextView
                            android:id="@+id/tv_detail_movie_director"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="movie_director" />

                        <TextView
                            android:id="@+id/tv_detail_movie_age_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="1"
                            android:text="PG 99+" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/v_divider_thin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_3"
                    app:layout_constraintTop_toBottomOf="@id/ll_detail_sub_header" />

                <LinearLayout
                    android:id="@+id/ll_detail_vote_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_divider_thin">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_detail_movie_rating_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.7"
                                android:textColor="@color/yellow"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <RatingBar
                                android:id="@+id/rb_detail_movie_rating"
                                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:progressTint="@color/yellow"
                                android:rating="3.7"
                                android:secondaryProgressTint="@color/light_gray_2"
                                android:stepSize="0.1" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_detail_movie_rating_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="9999 Vote"
                            android:textColor="@color/indigo"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_3" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ToggleButton
                        android:id="@+id/tb_detail_movie_watchlist"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableStart="@drawable/selector_toggle_like"
                        android:textOn="Di watchlist saya"
                        android:textOff="Masukkan watchlist"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/indigo"/>

                </LinearLayout>

                <View
                    android:id="@+id/v_divider_thick"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/gray_3"
                    app:layout_constraintTop_toBottomOf="@id/ll_detail_vote_container" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_detail_tab_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_divider_thick"
                    app:tabIndicatorColor="@color/sky_blue"
                    app:tabIndicatorFullWidth="true"
                    app:tabIndicatorHeight="1dp"
                    app:tabSelectedTextColor="@color/indigo"
                    app:tabTextColor="@color/light_gray_2" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_detail_tab_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tl_detail_tab_container" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_detail_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:background="@color/light_gray_2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_detail_bottom_btn_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_ticket_gray"/>

        <TextView
            android:id="@+id/tv_detail_bottom_btn_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli Tiket"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/gray_3_alt"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>