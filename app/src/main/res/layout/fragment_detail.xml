<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_detail_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctl_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/indigo"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/iv_detail_movie_backdrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/test_gambar"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

<!--            <ImageView-->
<!--                android:id="@+id/iv_test"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="?attr/actionBarSize"-->
<!--                android:visibility="gone"-->
<!--                android:src="@drawable/test_gambar"-->
<!--                android:scaleType="centerCrop"/>-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail_header"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/tv_detail_movie_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text=""
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_detail_sub_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/iv_detail_movie_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/test_gambar_2"
                        android:scaleType="fitXY"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="movie_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/indigo"/>
                    
                    <TextView
                        android:id="@+id/tv_detail_movie_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="movie_genre"/>

                    <TextView
                        android:id="@+id/tv_detail_movie_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="movie_duration"/>

                    <TextView
                        android:id="@+id/tv_detail_movie_director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="movie_director"/>

                    <TextView
                        android:id="@+id/tv_detail_movie_age_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:text="PG 99+"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/v_divider_thin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/ll_detail_sub_header"
                android:background="@color/gray_3"/>

            <LinearLayout
                android:id="@+id/ll_detail_vote_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/v_divider_thin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_detail_movie_rating_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.7"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/yellow"/>

                        <RatingBar
                            android:id="@+id/rb_detail_movie_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:stepSize="0.1"
                            android:layout_gravity="center"
                            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                            android:rating="3.7"
                            android:progressTint="@color/yellow"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_detail_movie_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="9999 Vote"
                        android:textSize="12sp"
                        android:textColor="@color/indigo"/>

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_3"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masukkan watchlist"
                        android:textColor="@color/indigo"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/selector_toggle_like"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/v_divider_thick"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                app:layout_constraintTop_toBottomOf="@id/ll_detail_vote_container"
                android:background="@color/gray_3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>